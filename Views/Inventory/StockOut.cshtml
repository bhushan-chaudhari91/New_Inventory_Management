                            </div>

                           @*  <div class="col-md-2">
                                <div class="form-group">
                                    <label for="productQuantity">Product Quantity</label>
                                    <input type="text" class="form-control" id="productQuantity" placeholder="Quantity">
                                </div>
                            </div> *@
