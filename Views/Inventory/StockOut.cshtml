                                <div class="form-group">
                                    <label for="productQuantity">Stock Out Quantity</label>
                                    <input type="text" class="form-control" id="productQuantity" placeholder="Quantity">
                                    <small id="quantityError" style="color: red;"></small>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
