                                </div>
                            </div>

                        </div>



                        <!-- Added Table -->
                        <div class="table-responsive mt-4" style="padding-bottom: 25px;">
                            <table class="table-container" id="stockOutTable">
                                <thead>
                                    <tr>
                                        <th>Sr.No</th>
                                        <th>Barcode Id</th>
                                        <th>Product Name</th>
                                        <th>Product Quantity</th>
                                        <th>Reason</th>
                                        <th>Action</th>
